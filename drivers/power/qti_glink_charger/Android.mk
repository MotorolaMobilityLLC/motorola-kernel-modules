	KERNEL_CFLAGS += CONFIG_WIRELESS_CPS4035B=y
	KBUILD_OPTIONS += CONFIG_WIRELESS_CPS4035B=y
endif

ifeq ($(WIRELESS_CPS4019),true)
	KERNEL_CFLAGS += CONFIG_WIRELESS_CPS4019=y
	KBUILD_OPTIONS += CONFIG_WIRELESS_CPS4019=y
endif

KBUILD_OPTIONS_GKI += GKI_OBJ_MODULE_DIR=gki
include $(DLKM_DIR)/AndroidKernelModule.mk
