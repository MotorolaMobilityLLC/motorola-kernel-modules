ifeq ($(TARGET_KERNEL_VERSION),$(filter $(TARGET_KERNEL_VERSION),4.19))
        KERNEL_SOURCE_PATH ?= kernel/msm-4.19
else
        KERNEL_SOURCE_PATH ?= kernel/msm-4.9
endif

