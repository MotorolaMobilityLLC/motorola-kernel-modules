DLKM_DIR := motorola/kernel/modules
LOCAL_PATH := $(call my-dir)

KBUILD_OPTIONS += CONFIG_TOUCHSCREEN_CYPRESS_CYTTSP5=y

KBUILD_OPTIONS += CONFIG_TOUCHSCREEN_CYPRESS_CYTTSP5_DEVICETREE_SUPPORT=y

ifeq ($(TOUCHSCREEN_CYPRESS_CYTTSP5_I2C),true)
    KBUILD_OPTIONS += CONFIG_TOUCHSCREEN_CYPRESS_CYTTSP5_I2C=y
endif

ifeq ($(TOUCHSCREEN_CYPRESS_CYTTSP5_SPI),true)
    KBUILD_OPTIONS += CONFIG_TOUCHSCREEN_CYPRESS_CYTTSP5_SPI=y
endif


ifeq ($(TOUCHSCREEN_CYPRESS_CYTTSP5_MT_A),true)
    KBUILD_OPTIONS += CONFIG_TOUCHSCREEN_CYPRESS_CYTTSP5_MT_A=y
endif

ifeq ($(TOUCHSCREEN_CYPRESS_CYTTSP5_MT_B),true)
    KBUILD_OPTIONS += CONFIG_TOUCHSCREEN_CYPRESS_CYTTSP5_MT_B=y
endif

ifeq ($(TOUCHSCREEN_CYPRESS_CYTTSP5_BUTTON),true)
    KBUILD_OPTIONS += CONFIG_TOUCHSCREEN_CYPRESS_CYTTSP5_BUTTON=y
endif

ifeq ($(TOUCHSCREEN_CYPRESS_CYTTSP5_PROXIMITY),true)
    KBUILD_OPTIONS += CONFIG_TOUCHSCREEN_CYPRESS_CYTTSP5_PROXIMITY=y
endif

ifeq ($(DRM_PANEL_EVENT_NOTIFICATIONS),true)
    KBUILD_OPTIONS += CONFIG_DRM_PANEL_EVENT_NOTIFICATIONS=y
endif

ifeq ($(DRM_PANEL_NOTIFICATIONS),true)
    KBUILD_OPTIONS += CONFIG_DRM_PANEL_NOTIFICATIONS=y
endif


include $(CLEAR_VARS)
LOCAL_MODULE := parade_tma5xx_mmi_core.ko
LOCAL_MODULE_TAGS := optional
LOCAL_MODULE_PATH := $(KERNEL_MODULES_OUT)
ifneq ($(findstring touchscreen_mmi.ko,$(BOARD_VENDOR_KERNEL_MODULES)),)
    KBUILD_OPTIONS += CONFIG_INPUT_TOUCHSCREEN_MMI=y
    LOCAL_ADDITIONAL_DEPENDENCIES += $(KERNEL_MODULES_OUT)/touchscreen_mmi.ko
endif
include $(DLKM_DIR)/AndroidKernelModule.mk

include $(CLEAR_VARS)
LOCAL_MODULE := parade_tma5xx_mmi_loader.ko
LOCAL_MODULE_TAGS := optional
LOCAL_MODULE_PATH := $(KERNEL_MODULES_OUT)
include $(DLKM_DIR)/AndroidKernelModule.mk

include $(CLEAR_VARS)
LOCAL_MODULE := parade_tma5xx_mmi_debug.ko
LOCAL_MODULE_TAGS := optional
LOCAL_MODULE_PATH := $(KERNEL_MODULES_OUT)
include $(DLKM_DIR)/AndroidKernelModule.mk

include $(CLEAR_VARS)
LOCAL_MODULE := parade_tma5xx_mmi_access.ko
LOCAL_MODULE_TAGS := optional
LOCAL_MODULE_PATH := $(KERNEL_MODULES_OUT)
KBUILD_OPTIONS += CONFIG_TOUCHSCREEN_CYPRESS_CYTTSP5_DEVICE_ACCESS_API=y
include $(DLKM_DIR)/AndroidKernelModule.mk

KBUILD_OPTIONS_GKI += GKI_OBJ_MODULE_DIR=gki
